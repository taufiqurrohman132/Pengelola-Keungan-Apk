<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tujuan_keuangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/cl_undang_teman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapimg_tujuan"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@color/blue_transparant"
            android:src="@drawable/seratus_saja"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.00"
            app:layout_constraintVertical_bias="0.00"
            app:shapeAppearanceOverlay="@style/CircleImageView" />

        <TextView
            android:id="@+id/tv_tujuan_keuangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tujuan Keuangan"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/rv_tujuan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/shapimg_tujuan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.00"/>

        <TextView
            android:id="@+id/tv_lihat_tujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Semua"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/rv_tujuan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_tujuan_keuangan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.999"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shapimg_tujuan" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_undang_teman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_tujuan_keuangan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_undang_teman"
            style="@style/ProfileImage"
            android:src="@drawable/undang_teman"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.00"/>

        <TextView
            android:id="@+id/tv_undang_teman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undang Teman"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toTopOf="@id/tv_desk_undang_teman"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_undang_teman"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.00"/>

        <TextView
            android:id="@+id/tv_desk_undang_teman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dapatkan hadiah dengan mengajak temanmu menggunakan aplikasi Sratus"
            android:textColor="@color/abu_abu_dark"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_undang_teman"
            app:layout_constraintEnd_toStartOf="@id/img_next_undang_teman"
            app:layout_constraintStart_toEndOf="@+id/img_undang_teman"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/img_next_undang_teman"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:scaleType="center"
            android:src="@drawable/next_detail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.999"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>