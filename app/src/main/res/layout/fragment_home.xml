<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:elevation="0.1dp"
    android:id="@+id/sv_fragment_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:overScrollMode="ifContentScrolls"
    android:fillViewport="true"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_pengeluaran"
            android:paddingTop="48dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@color/blue"
            android:elevation="4dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgvshap_profile"
                style="@style/ProfileImage"
                android:src="@drawable/user_profile"
                android:tint="@color/clicked_trans_to_bluetrans"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                android:id="@+id/tv_Halo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halo, "
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgvshap_profile"
                app:layout_constraintTop_toTopOf="@id/imgvshap_profile"
                app:layout_constraintBottom_toTopOf="@id/tv_selamat"
                app:layout_constraintHorizontal_bias="0.00"/>

            <TextView
                android:id="@+id/tv_selamat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:text="Selamat"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_Halo"
                app:layout_constraintBottom_toBottomOf="@id/imgvshap_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgvshap_profile"
                app:layout_constraintHorizontal_bias="0.00"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgv_contact"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/message"
                android:scaleType="center"
                android:background="@color/clicked_bluetrans_to_bluedark"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/cv_tap_lihat"
                app:layout_constraintRight_toLeftOf="@+id/imgv_tujuan_keuangan"
                app:layout_constraintVertical_bias="0.0"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgv_tujuan_keuangan"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@color/clicked_bluetrans_to_bluedark"
                android:src="@drawable/tujuan"
                android:scaleType="center"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/cv_tap_lihat"
                app:layout_constraintLeft_toRightOf="@+id/imgv_contact"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintVertical_bias="0.0"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_tap_lihat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/imgvshap_profile"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cv_grub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/tv_pengeluaran_bulan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="Pengeluaran"
                        android:textColor="@color/black"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintHorizontal_bias="0.0"/>

                    <TextView
                        android:id="@+id/tv_tap_lihat"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:gravity="center_vertical"
                        style="@style/JudulActivity"
                        android:textColor="@color/black"
                        android:text="Tap untuk lihat"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/tv_pengeluaran_bulan"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.0"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgv_bg_tap"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        app:shapeAppearanceOverlay="@style/CircleImageView"
                        android:background="@color/clicked_trans_to_bluetrans"
                        app:layout_constraintTop_toTopOf="@+id/tv_tap_lihat"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_tap_lihat"
                        app:layout_constraintBottom_toBottomOf="@id/tv_tap_lihat"
                        app:layout_constraintHorizontal_bias="0.999"
                        app:layout_constraintVertical_bias="0.000"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgv_tap_lihat"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:shapeAppearanceOverlay="@style/CircleImageView"
                        android:scaleType="centerCrop"
                        android:src="@drawable/expand_more"
                        android:background="@color/blue_transparant"
                        app:tint="@color/blue"
                        app:layout_constraintTop_toTopOf="@+id/imgv_bg_tap"
                        app:layout_constraintRight_toRightOf="@id/imgv_bg_tap"
                        app:layout_constraintLeft_toLeftOf="@+id/imgv_bg_tap"
                        app:layout_constraintBottom_toBottomOf="@id/imgv_bg_tap"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_grafik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/tv_tap_lihat"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.000"/>


                    <LinearLayout
                        android:id="@+id/total_saldo_asset"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/rv_grafik"
                        app:layout_constraintRight_toLeftOf="@id/tabungan_asset"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:scaleType="center"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:src="@drawable/saldo"
                            android:background="@color/blue_white_light"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Saldo"
                            android:textColor="@color/black"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/tv_rp_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp."
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabungan_asset"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/total_saldo_asset"
                        app:layout_constraintRight_toLeftOf="@id/dompet_kamu_asset"
                        app:layout_constraintTop_toBottomOf="@id/rv_grafik">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@color/blue_transparant"
                            android:src="@drawable/tabungan"
                            android:scaleType="center"
                            app:shapeAppearanceOverlay="@style/CircleImageView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tabungan"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_rp_tabungan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp."
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/dompet_kamu_asset"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/rv_grafik"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tabungan_asset"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:src="@drawable/dompet"
                            android:scaleType="center"
                            android:background="@color/red_transparant"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dompet Kamu"
                            android:textColor="@color/black"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/tv_rp_dompet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp."
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_kabar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/linear_pengingat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgv_send"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/send"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintHorizontal_bias="0.00"
                    app:layout_constraintVertical_bias="0.00"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imgv_expand"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_kabar"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:text="Kabar dari Sratus"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.00"
                    app:layout_constraintBottom_toBottomOf="@+id/imgv_send"
                    app:layout_constraintEnd_toStartOf="@id/imgv_expand"
                    app:layout_constraintStart_toEndOf="@id/imgv_send"
                    app:layout_constraintTop_toTopOf="@id/imgv_send"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgv_expand"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/expand_more"
                android:background="@color/clicked_abu_abu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgv_send"
                app:layout_constraintBottom_toBottomOf="@id/imgv_send"
                app:tint="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_kabar_seratus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgv_send" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linear_pengingat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:background="@color/white"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/home_kabar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_pengingat_pembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:elevation="1dp"
                    android:background="@color/red"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/imgv_notif_judul"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/notif"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.00"
                            app:layout_constraintHorizontal_bias="0.00"
                            app:tint="@color/yellow" />

                        <TextView
                            android:id="@+id/tv_judul_pengingat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pengingat Pembayaran"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@id/imgv_notif_judul"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/imgv_notif_judul"
                            app:layout_constraintTop_toTopOf="@id/imgv_notif_judul"
                            app:layout_constraintHorizontal_bias="0.00"/>

                        <TextView
                            android:id="@+id/tv_detail_pengingat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail"
                            android:textColor="@color/blue"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/imgv_notif_judul"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgv_notif_judul"
                            app:layout_constraintHorizontal_bias="0.999"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_pengingat_keuangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imgv_notif_judul" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_transaksi_terakhir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                app:layout_constraintBottom_toTopOf="@id/cl_anggaran"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_lihat_detail_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:text="Lihat Detail"
                    android:textColor="@color/clicked_blue_to_bluedark"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.999"
                    app:layout_constraintVertical_bias="0.00"/>

                <TextView
                    android:id="@+id/tv_transaksi_trakhir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Transaksi Terakhir"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_lihat_detail_transaksi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.00"
                    app:layout_constraintVertical_bias="0.00"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_transaksi_terakhir"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_transaksi_trakhir"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_anggaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_transaksi_terakhir"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tv_anggaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anggaran Kamu"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.00"
                    app:layout_constraintHorizontal_bias="0.00"/>

                <TextView
                    android:id="@+id/tv_kelola_anggaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola Anggaran"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_anggaran"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.00"
                    app:layout_constraintHorizontal_bias="0.999"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_anggaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_anggaran" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_tujuan_keuangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@id/cl_undang_teman"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shapimg_tujuan"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@color/blue_transparant"
                    android:src="@drawable/seratus_saja"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.00"
                    app:layout_constraintVertical_bias="0.00"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                <TextView
                    android:id="@+id/tv_tujuan_keuangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tujuan Keuangan"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/rv_tujuan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/shapimg_tujuan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.00"/>

                <TextView
                    android:id="@+id/tv_lihat_tujuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/rv_tujuan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_tujuan_keuangan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.999"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_tujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/shapimg_tujuan" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_undang_teman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_tujuan_keuangan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_undang_teman"
                    style="@style/ProfileImage"
                    android:src="@drawable/undang_teman"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.00"/>

                <TextView
                    android:id="@+id/tv_undang_teman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Undang Teman"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintBottom_toTopOf="@id/tv_desk_undang_teman"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_undang_teman"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.00"/>

                <TextView
                    android:id="@+id/tv_desk_undang_teman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Dapatkan hadiah dengan mengajak temanmu menggunakan aplikasi Sratus"
                    android:textColor="@color/abu_abu_dark"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_undang_teman"
                    app:layout_constraintEnd_toStartOf="@id/img_next_undang_teman"
                    app:layout_constraintStart_toEndOf="@+id/img_undang_teman"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/img_next_undang_teman"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/next_detail"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.999"
                    app:tint="@color/black" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
