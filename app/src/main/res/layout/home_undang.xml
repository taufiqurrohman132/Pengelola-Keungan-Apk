<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_undang_teman"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="4dp"
    android:padding="20dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toBottomOf="@+id/cl_tujuan_keuangan"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_undang_teman"
        style="@style/ProfileImage"
        android:src="@drawable/undang_teman"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.00"/>

    <TextView
        android:id="@+id/tv_undang_teman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undang Teman"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@id/tv_desk_undang_teman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_undang_teman"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.00"/>

    <TextView
        android:id="@+id/tv_desk_undang_teman"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dapatkan hadiah dengan mengajak temanmu menggunakan aplikasi Sratus"
        android:textColor="@color/abu_abu_dark"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_undang_teman"
        app:layout_constraintEnd_toStartOf="@id/img_next_undang_teman"
        app:layout_constraintStart_toEndOf="@+id/img_undang_teman"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/img_next_undang_teman"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:scaleType="center"
        android:src="@drawable/next_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.999"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>