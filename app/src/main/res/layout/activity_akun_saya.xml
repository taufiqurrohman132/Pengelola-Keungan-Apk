                        android:src="@drawable/next_detail"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.999"
                        app:tint="@color/black" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_atur_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/clicked_white_to_abu"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgv_atur_pin"
                        style="@style/ProfileImage"
                        android:scaleType="center"
                        android:src="@drawable/pin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.00"
                        app:tint="@color/orange" />
                    <TextView
                        android:id="@+id/tv_atur_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atur Pin"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintHorizontal_bias="0.00"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgv_atur_pin"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imgv_detail_atur_pin"
                        style="@style/ProfileImage"
                        android:src="@drawable/next_detail"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.999"
                        app:tint="@color/black" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_biometrik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/clicked_white_to_abu"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgv_pengaturan_notif"
                        style="@style/ProfileImage"
                        android:scaleType="center"
                        android:src="@drawable/edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.00"
                        app:tint="@color/black" />
                    <TextView
                        android:id="@+id/tv_pengaturan_notif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biometric Login"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintHorizontal_bias="0.00"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgv_pengaturan_notif"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imgv_detail_pengaturan_notif"
                        style="@style/ProfileImage"
                        android:src="@drawable/next_detail"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.999"
                        app:tint="@color/black" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/clicked_white_to_abu"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgv_biometrik"
                        style="@style/ProfileImage"
                        android:scaleType="center"
                        android:src="@drawable/mode"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.00"
                        app:tint="@color/yellow" />
                    <TextView
                        android:id="@+id/tv_biometrik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mode"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintHorizontal_bias="0.00"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgv_biometrik"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imgv_detail_biometrik"
                        style="@style/ProfileImage"
                        android:src="@drawable/next_detail"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.999"
                        app:tint="@color/black" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_kelola"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/clicked_white_to_abu"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgv_dark_mode"
                        style="@style/ProfileImage"
                        android:scaleType="center"
                        android:src="@drawable/kelola_kategori"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.00"
                        app:tint="@color/orange" />
                    <TextView
                        android:id="@+id/tv_dark_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelola Kategori"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintHorizontal_bias="0.00"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgv_dark_mode"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imgv_detail_dark_mode"
                        style="@style/ProfileImage"
                        android:src="@drawable/next_detail"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.999"
                        app:tint="@color/black" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/clicked_white_to_abu"
                    android:orientation="horizontal">

                         <ImageView
                             android:id="@+id/imgv_kelola"
                             style="@style/ProfileImage"
                             android:scaleType="center"
                             android:src="@drawable/reset"
                             app:layout_constraintBottom_toBottomOf="parent"
                             app:layout_constraintEnd_toEndOf="parent"
                             app:layout_constraintHorizontal_bias="0.00"
                             app:layout_constraintStart_toStartOf="parent"
                             app:layout_constraintTop_toTopOf="parent"
                             app:tint="@color/blue" />
                    <TextView
                        android:id="@+id/tv_kelola"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset Data"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintHorizontal_bias="0.00"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgv_kelola"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imgv_detail_kelola"
                        style="@style/ProfileImage"
                        android:src="@drawable/next_detail"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.999"
                        app:tint="@color/black" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_bahasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/clicked_white_to_abu"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgv_reset_data"
                        style="@style/ProfileImage"
                        android:scaleType="center"
                        android:src="@drawable/ganti_bahasa"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.00"
                        app:tint="@color/blue" />
                    <TextView
                        android:id="@+id/tv_reset_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bahasa"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintHorizontal_bias="0.00"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgv_reset_data"
