<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AkunSayaActivity">
    <LinearLayout
        android:id="@+id/linear_akun"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:elevation="0.1dp"
        android:orientation="horizontal"
        android:background="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.000">
        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/btn_back_akun"
            android:src="@drawable/back"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/clicked_trans_to_bluetrans"
            android:scaleType="fitCenter"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:textColor="@color/white"
            style="@style/JudulActivity"
            android:text="Akun Saya"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:paddingLeft="20dp"/>

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="ifContentScrolls"
        android:clipToPadding="true"
        android:scrollbars="none"
        android:fillViewport="true"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linear_akun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:elevation="8dp"
                android:background="@color/blue"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:elevation="8dp"
                android:layout_marginBottom="8dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shapimgv_profile"
                    style="@style/ProfileImage"
                    android:src="@drawable/user_profile"
                    android:tint="@color/clicked_trans_to_bluetrans"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.00"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_akun_name"
                    android:text="Taufiqur Rohman"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_email_name"
                    app:layout_constraintStart_toEndOf="@id/shapimgv_profile"
                    app:layout_constraintEnd_toStartOf="@id/shapimgv_edit_profile"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_email_name"
                    android:text="taufiqurrohman132139@gmail.com"
                    android:layout_marginLeft="20dp"
                    android:textSize="13sp"
                    android:textColor="@color/blue_white_light"
                    app:layout_constraintTop_toBottomOf="@id/tv_akun_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/shapimgv_profile"
                    app:layout_constraintEnd_toStartOf="@id/shapimgv_edit_profile"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    style="@style/ProfileImage"
                    android:id="@+id/shapimgv_edit_profile"
                    android:src="@drawable/edit"
                    android:scaleType="center"
                    android:background="@color/clicked_trans_to_bluetrans"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.999"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tanggal_priode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/clicked_white_to_abu"
                android:elevation="4dp"
                android:layout_marginBottom="8dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">
                <ImageView
                    android:id="@+id/shapimgv_priode_pencatatan"
                    style="@style/ProfileImage"
                    android:src="@drawable/pencatatan_tanggal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.00"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_priode_name"
                    android:text="Tanggal Priode Pencatatan"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_tanggal"
                    app:layout_constraintStart_toEndOf="@id/shapimgv_priode_pencatatan"
                    app:layout_constraintEnd_toStartOf="@id/shapimgv_detail_priode"
                    app:layout_constraintHorizontal_bias="0.00"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tanggal"
                    android:text="Tanggal 5"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/red"
                    app:layout_constraintHorizontal_bias="0.00"
                    app:layout_constraintTop_toBottomOf="@id/tv_priode_name"
                    app:layout_constraintBottom_toTopOf="@id/tv_setiap_bulan"
                    app:layout_constraintStart_toEndOf="@id/shapimgv_priode_pencatatan"
                    app:layout_constraintEnd_toStartOf="@id/shapimgv_detail_priode"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_setiap_bulan"
                    android:text="Setiap Bulan"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/abu_abu_dark"
                    app:layout_constraintHorizontal_bias="0.00"
                    app:layout_constraintTop_toBottomOf="@id/tv_tanggal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/shapimgv_priode_pencatatan"
                    app:layout_constraintEnd_toStartOf="@id/shapimgv_detail_priode"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_height="34dp"
                    android:layout_width="34dp"
                    android:id="@+id/shapimgv_detail_priode"
                    android:src="@drawable/next_detail"
                    android:tint="@color/black"
                    android:scaleType="fitCenter"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.999"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/undang_teman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/clicked_white_to_abu"
                android:elevation="4dp"
                android:layout_marginBottom="8dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">
                <ImageView
                    android:id="@+id/shapimgv_undang_teman"
                    style="@style/ProfileImage"
                    android:src="@drawable/undang_teman"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.00"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_undang"
                    android:text="Undang Teman"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_undang_deskrip"
                    app:layout_constraintStart_toEndOf="@id/shapimgv_undang_teman"
                    app:layout_constraintEnd_toStartOf="@id/shapimgv_detail_undang"
                    app:layout_constraintHorizontal_bias="0.00"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_undang_deskrip"
                    android:text="Dapatkan hadiah dengan mengajak temanmu menggunakan Aplikasi Sratus"
                    android:layout_marginLeft="20dp"
                    android:textSize="13sp"
                    android:textColor="@color/abu_abu_dark"
                    app:layout_constraintHorizontal_bias="0.00"
                    app:layout_constraintTop_toBottomOf="@id/tv_undang"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/shapimgv_undang_teman"
                    app:layout_constraintEnd_toStartOf="@id/shapimgv_detail_undang"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_height="34dp"
                    android:layout_width="34dp"
                    android:id="@+id/shapimgv_detail_undang"
                    android:src="@drawable/next_detail"
                    android:tint="@color/black"
                    android:scaleType="fitCenter"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.999"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_akun_saya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
