<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_pengeluaran"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="48dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:background="@color/blue"
    android:elevation="8dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgvshap_profile"
        style="@style/ProfileImage"
        android:src="@drawable/user_profile"
        android:tint="@color/clicked_trans_to_bluetrans"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/imgvshap_profile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0" >
        <TextView
            android:id="@+id/tv_Halo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Halo, "
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_selamat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:text="Selamat"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgv_contact"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/message"
        android:scaleType="center"
        android:background="@color/clicked_bluetrans_to_bluedark"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cv_tap_lihat"
        app:layout_constraintRight_toLeftOf="@+id/imgv_tujuan_keuangan"
        app:layout_constraintVertical_bias="0.0"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgv_tujuan_keuangan"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@color/clicked_bluetrans_to_bluedark"
        android:src="@drawable/tujuan"
        android:scaleType="center"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cv_tap_lihat"
        app:layout_constraintLeft_toRightOf="@+id/imgv_contact"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintVertical_bias="0.0"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tap_lihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imgvshap_profile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_grub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp">
                <TextView
                    android:id="@+id/tv_pengeluaran_bulan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Pengeluaran"
                    android:textColor="@color/black"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintHorizontal_bias="0.0"/>

                <TextView
                    android:id="@+id/tv_tap_lihat"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center_vertical"
                    style="@style/JudulActivity"
                    android:textColor="@color/black"
                    android:text="Tap untuk lihat"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pengeluaran_bulan"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgv_bg_tap"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        app:shapeAppearanceOverlay="@style/CircleImageView"
                        android:layout_gravity="center"
                        android:background="@color/clicked_trans_to_bluetrans"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pengeluaran_bulan"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_tap_lihat"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.999"
                    app:layout_constraintVertical_bias="0.000"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgv_tap_lihat"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:shapeAppearanceOverlay="@style/CircleImageView"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"
                        android:elevation="4dp"
                        android:src="@drawable/expand_more"
                        android:layout_gravity="center"
                        android:background="@color/blue_transparant"
                        app:tint="@color/blue" app:layout_constraintTop_toBottomOf="@+id/tv_pengeluaran_bulan"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_tap_lihat"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.999"
                        app:layout_constraintVertical_bias="0.000"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_grafik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_tap_lihat"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.000"/>


                    <LinearLayout
                        android:id="@+id/total_saldo_asset"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/rv_grafik"
                        app:layout_constraintRight_toLeftOf="@id/tabungan_asset"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:scaleType="center"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:src="@drawable/saldo"
                            android:background="@color/blue_white_light"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Saldo"
                            android:textColor="@color/black"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/tv_rp_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp."
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabungan_asset"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/total_saldo_asset"
                        app:layout_constraintRight_toLeftOf="@id/dompet_kamu_asset"
                        app:layout_constraintTop_toBottomOf="@id/rv_grafik">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@color/blue_transparant"
                            android:src="@drawable/tabungan"
                            android:scaleType="center"
                            app:shapeAppearanceOverlay="@style/CircleImageView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tabungan"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_rp_tabungan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp."
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/dompet_kamu_asset"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/rv_grafik"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tabungan_asset"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:src="@drawable/dompet"
                            android:scaleType="center"
                            android:background="@color/red_transparant"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dompet Kamu"
                            android:textColor="@color/black"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/tv_rp_dompet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp."
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
