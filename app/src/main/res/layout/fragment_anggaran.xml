<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_anggaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:title="Atur Anggaran"
            app:contentScrim="@color/white"
            android:background="@color/transparant"
            app:expandedTitleGravity="center_horizontal|bottom"
            app:collapsedTitleTextAppearance="@style/TextBold"
            app:collapsedTitleTextColor="@color/black"
            app:expandedTitleTextColor="@color/blue"
            app:expandedTitleTextAppearance="@style/TextBold.Size28"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_collapseParallaxMultiplier="0.7"
                android:paddingTop="100dp"
                android:paddingBottom="60dp"
                app:layout_collapseMode="parallax">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/pro_indi_anggaran"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal|top"
                    android:indeterminate="true"
                    android:fitsSystemWindows="true"
                    app:indicatorColor="@color/blue"
                    app:indicatorSize="230dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:trackColor="@color/abu_abu"
                    app:trackCornerRadius="8dp"
                    app:trackThickness="10dp" />

                <TextView
                    android:id="@+id/tv_anggaran_rupiah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 400.404"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    android:fitsSystemWindows="true"
                    app:layout_constraintBottom_toTopOf="@+id/tv_tersisa"
                    app:layout_constraintEnd_toEndOf="@id/pro_indi_anggaran"
                    app:layout_constraintStart_toStartOf="@+id/pro_indi_anggaran"
                    app:layout_constraintTop_toTopOf="@id/pro_indi_anggaran"
                    app:layout_constraintVertical_bias="0.999" />

                <TextView
                    android:id="@+id/tv_tersisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tersisa dari Rp 400.494"
                    android:textColor="@color/abu_abu"
                    android:textSize="12sp"
                    android:fitsSystemWindows="true"
                    app:layout_constraintBottom_toBottomOf="@+id/pro_indi_anggaran"
                    app:layout_constraintEnd_toEndOf="@id/pro_indi_anggaran"
                    app:layout_constraintStart_toStartOf="@+id/pro_indi_anggaran"
                    app:layout_constraintTop_toTopOf="@id/pro_indi_anggaran" />

                <TextView
                    android:id="@+id/tv_bulan_tahun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Desember 2025 - Januari 2026"
                    android:textColor="@color/abu_abu_dark"
                    android:textSize="14sp"
                    android:fitsSystemWindows="true"
                    app:layout_constraintBottom_toBottomOf="@+id/pro_indi_anggaran"
                    app:layout_constraintEnd_toEndOf="@id/pro_indi_anggaran"
                    app:layout_constraintStart_toStartOf="@+id/pro_indi_anggaran"
                    app:layout_constraintTop_toBottomOf="@id/tv_tersisa"
                    app:layout_constraintVertical_bias="0.00" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_anggaran"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@color/white">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_lay_anggaran"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:background="@color/transparant"
            app:tabMaxWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.00"
            app:tabIndicatorAnimationMode="elastic"
            app:tabIndicatorColor="@color/blue"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorGravity="bottom"
            app:tabSelectedTextColor="@color/blue"
            app:tabTextAppearance="@style/TextBold.Size16"
            app:tabTextColor="@color/abu_abu" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_anggaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_lay_anggaran"
            app:layout_constraintVertical_bias="0.00" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>