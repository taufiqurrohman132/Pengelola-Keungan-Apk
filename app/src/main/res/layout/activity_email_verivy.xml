<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmailVerivyActivity">
    <ImageButton
        android:id="@+id/btn_verify_kembali"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/back"
        android:background="@color/white"
        android:scaleType="centerCrop"
        app:tint="@color/black" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Masukkan Kode Verifikasi"
        android:layout_marginLeft="24dp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/tv_verify_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/teks_verivy"
        android:textColor="@color/abu_abu_dark"
        android:textSize="16sp"/>
    <com.chaos.view.PinView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pin_view_verify"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:inputType="number"
        style="@style/PinWidget.PinView"
        android:cursorVisible="true"
        android:padding="0dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:viewType="rectangle"
        app:itemCount="6"
        app:itemHeight="48dp"
        app:itemWidth="48dp"
        app:itemRadius="8dp"
        app:hideLineWhenFilled="true"
        app:itemSpacing="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_waktu_verify"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/abu_abu_dark"
            android:layout_gravity="bottom"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="24dp"
            android:background="@drawable/button_bayangan"
            android:elevation="190dp"
            app:cardCornerRadius="16dp">
            <ImageButton
                android:id="@+id/imgbtn_verify_next"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/next"
                android:background="@color/blue_white_light"
                app:tint="@color/white" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>